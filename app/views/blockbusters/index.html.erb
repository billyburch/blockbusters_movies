<h1>Blockbuster Stores</h1>
<a href="/blockbusters">Blockbuster Store Index</a>
<a href="/movies">Movie Index</a>

<% @blockbusters.each do |blockbuster| %>
  <h3><a href="/blockbusters/<%= blockbuster.id %>"><%= blockbuster.name %></a></h3>
  <p> Created: <%= blockbuster.created_at %> <p>

  <p><%= blockbuster.city %></p>
  <p><%= blockbuster.state %></p>
  <p><%= blockbuster.store_awards %></p>
  <p><%= blockbuster.rewards_program %></p>
  <a href="/blockbusters/<%= blockbuster.id  %>/edit">Edit</a>
  <form action="/blockbusters/<%= blockbuster.id %>" method="POST">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <input type="hidden" name="_method" value="DELETE">
    <input type="submit" value="delete"/>
  </form>
<% end %>